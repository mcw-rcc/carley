#%Module -*- tcl -*-
##
## modulefile
##
proc ModulesHelp { } {

  puts stderr "\tAdds LS-DYNA to your environment variables,"
}

module-whatis "adds LS-DYNA to your environment variables."

set            version             9.0.1
set            root                /cm/shared/apps/lsdyna/$version
set            openmpiversion      1.10.3a1
set            openmpiroot         /usr/mpi/gcc/openmpi-$openmpiversion
                                  
setenv	       LSTC_LICENSE 	   network
setenv	       LSTC_LICENSE_SERVER 31010@141.106.207.38
setenv         MPI_HOME            $openmpiroot
setenv         MPI_RUN             $openmpiroot/bin/mpirun
                                  
prepend-path   PATH                $root
prepend-path   PATH                $openmpiroot/bin
prepend-path   MANPATH             $openmpiroot/share/man
prepend-path   LD_RUN_PATH         $openmpiroot/lib64
prepend-path   LD_LIBRARY_PATH     $openmpiroot/lib64
prepend-path   LD_LIBRARY_PATH     /cm/local/modulefiles/openmpi/mlnx/gcc/64/$openmpiversion

